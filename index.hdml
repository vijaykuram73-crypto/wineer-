<!DOCTYPE html>
<html lang="hi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bandar Lottery - Dual iPhone Pro Max Winner</title>
    <!-- Tailwind CSS CDN for styling --><script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Font: Inter for clean look */
        body {
            font-family: 'Inter', sans-serif;
            /* Animated Gradient Background */
            background: linear-gradient(-45deg, #a855f7, #ec4899, #f97316, #fbbf24);
            background-size: 400% 400%;
            animation: gradient-animation 15s ease infinite;
        }
        
        @keyframes gradient-animation {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Custom styling for the fun title - Now Gold/Purple */
        .title-gradient {
            background-image: linear-gradient(to right, #facc15, #a78bfa, #f59e0b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* 3D button press effect for draw button */
        .press-button {
            box-shadow: 0 6px #6d28d9; /* Deep purple shadow */
            transition: all 0.1s ease;
        }

        .press-button:active {
            transform: translateY(4px);
            box-shadow: 0 2px #6d28d9;
        }

        /* 3D button press effect for WhatsApp button */
        .whatsapp-button {
            box-shadow: 0 4px #10b981; /* Green shadow */
            transition: all 0.1s ease;
        }
        .whatsapp-button:active {
            transform: translateY(2px);
            box-shadow: 0 1px #10b981;
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">

    <!-- Main Container - Centered, Responsive, and Flashy --><div class="w-full max-w-lg p-8 bg-white rounded-[30px] shadow-2xl border-4 border-yellow-300 transform hover:scale-[1.01] transition duration-300 text-center">

        <!-- Header and Title --><h1 class="text-5xl sm:text-6xl font-extrabold title-gradient mb-3 tracking-tight">
            üéâ MONKEY MAFIA LOTTERY üéâ
        </h1>
        <p class="text-gray-700 mb-8 text-xl font-semibold">
            Luckiest Draw on Earth! Jeetega Wahi, Jisko Kismat Chunegi!
        </p>

        <!-- Prize and Monkey Visuals --><div class="flex flex-col items-center justify-center space-y-6 mb-10">
            
            <!-- Prize Box (Golden Theme) --><div class="p-5 w-full bg-amber-50 rounded-2xl shadow-xl border-4 border-amber-400">
                <img src="https://placehold.co/150x150/facc15/000?text=iPhone+Pro+Max+Prizes" alt="iPhone Pro Max Prizes" class="rounded-xl shadow-2xl mb-4 mx-auto border-4 border-white/50">
                <h2 class="text-2xl font-bold text-amber-700">THE GRAND PRIZE:</h2>
                <p class="text-3xl font-extrabold text-purple-700">iPhone XS Max se iPhone 17 Pro Max tak! ‚ú®</p>
            </div>
            
            <!-- Monkey Visual (Initial State) --><div id="monkey-visual" class="text-8xl p-5 bg-purple-100 rounded-full shadow-2xl border-6 border-purple-500 transform scale-0 transition duration-700 ease-in-out">
                üôà
            </div>
        </div>

        <!-- NEW: Ticket Input Field --><div class="mb-8">
            <label for="ticketInput" class="block text-2xl font-bold text-gray-800 mb-3 tracking-wide">
                üéü Apna Kismati Lottery Number Daalo:
            </label>
            <input type="number" id="ticketInput" placeholder="Jaise: 4321" 
                   maxlength="4" 
                   class="w-full p-4 text-center text-3xl font-extrabold rounded-2xl border-4 border-purple-500 focus:border-red-500 focus:ring-4 focus:ring-red-200 transition duration-150 shadow-xl"
                   value="4321"> <!-- Default value set for testing --></div>

        <!-- The Draw Button (3D Effect) --><button id="drawButton" 
                class="press-button w-full py-5 text-2xl font-black rounded-2xl text-white bg-purple-700 
                       hover:bg-purple-800 transition duration-150 uppercase tracking-wider">
            Kismat Ka Button Dabao!
        </button>

        <!-- Result Display Area (Now empty, filled by JS) --><div id="resultMessage" class="mt-10 p-6 bg-yellow-100 rounded-2xl border-4 border-purple-500 shadow-2xl hidden transform rotate-1 transition duration-500">
            <!-- This content is dynamically generated by JavaScript --></div>
        
    </div>

    <script>
        // Global variables for elements
        const drawButton = document.getElementById('drawButton');
        const resultMessage = document.getElementById('resultMessage');
        const monkeyVisual = document.getElementById('monkey-visual');
        const ticketInput = document.getElementById('ticketInput'); 
        
        /**
         * Function to generate a random 4-digit number (1000 to 9999).
         * @returns {string} The randomly generated ticket number.
         */
        function generateRandomTicket() {
            // Generate a number between 1000 (inclusive) and 9999 (inclusive)
            const min = 1000;
            const max = 9999;
            return String(Math.floor(Math.random() * (max - min + 1)) + min);
        }

        // --- Game Logic ---
        
        /**
         * Lottery Draw Function.
         */
        function drawWinner() {
            // Get the user's entered number
            const userTicketNumber = ticketInput.value || 'KOI NUMBER NAHI';
            // Generate the Monkey's random winning number
            const bandarWinningNumber = generateRandomTicket();

            // Define the possible winning prizes (Randomly chosen on each draw)
            const possiblePrizes = [
                'iPhone XS Max üì± (Classic Gold)',
                'iPhone 11 Pro Max üçè (Midnight Green)',
                'iPhone 12 Pro Max üîµ (Pacific Blue)',
                'iPhone 13 Pro Max üü¢ (Sierra Blue)',
                'iPhone 14 Pro Max ‚ö´ (Deep Purple)',
                'iPhone 15 Pro Max üü° (Natural Titanium)',
                'iPhone 16 Pro Max üåü (Next Gen Model)',
                'iPhone 17 Pro Max üöÄ (Future King)'
            ];
            const winningPrize = possiblePrizes[Math.floor(Math.random() * possiblePrizes.length)];
            
            // Button state change for drawing animation
            drawButton.disabled = true;
            drawButton.textContent = "ü•Å Nateeja Ghosit Ho Raha Hai... ü•Å";
            drawButton.classList.remove('bg-purple-700', 'hover:bg-purple-800');
            drawButton.classList.add('bg-gray-400');

            // Hide previous results
            resultMessage.classList.add('hidden');
            monkeyVisual.classList.remove('scale-100');
            monkeyVisual.classList.add('scale-0');
            monkeyVisual.innerHTML = 'ü§î'; // Thinking monkey

            // 3 second delay before announcing the winner
            setTimeout(() => {
                
                // --- WHATSAPP NUMBER LOGIC ---
                const whatsappNumber = '13652994776'; 
                const whatsappLink = https://wa.me/${whatsappNumber};
                const displayCountryCode = '+1';
                const displayNumber = '365 299 4776';

                // Pre-filled message for WhatsApp
                const prefilledMessage = Mujhe Bandar Lottery ka ${winningPrize.replace(/\s/g, '%20')} mila hai! Mera ticket number hai: ${userTicketNumber}. Please help me claim my prize.;

                // DYNAMICALLY SET RESULT CONTENT
                resultMessage.innerHTML = `
                    <p class="text-2xl font-medium text-purple-700 mb-3">
                        Aapka Number: 
                        <span class="text-red-600 font-extrabold text-3xl">${userTicketNumber}</span>
                    </p>
                    <p class="text-3xl font-black text-purple-800">WINNER ANNOUNCED!</p>
                    <p class="text-5xl font-extrabold text-red-600 mt-3 animate-pulse">
                        üëë BANDAR LAL! üëë
                    </p>
                    <p class="text-3xl font-bold text-gray-800 mt-2">
                        Winning Number: <span class="text-purple-900 font-extrabold">${bandarWinningNumber}</span>
                    </p>
                    <p class="text-2xl mt-4 text-purple-600">Aur Prize Hai: <span class="font-extrabold text-purple-900">${winningPrize}</span> Inka Hua! Mubarak Ho!</p>
                    
                    <!-- UPDATED: BILINGUAL ZAROORI NOTICE AND WHATSAPP CTA -->
                    <div class="mt-6 pt-4 border-t border-purple-300">
                        <p class="text-xl font-bold text-gray-800 mb-4 bg-red-100 p-2 rounded-lg border-l-4 border-red-500 text-left">
                            <span class="text-2xl block text-red-700 mb-1">üì¢ Zaroori Notice / Important Notice:</span>
                            Apne jeete hue prize ko turant prapt karne aur delivery prakriya shuru karne ke liye, kripya niche diye gaye Customer Support button par click karein.
                            <span class="block mt-1 text-sm font-normal text-gray-600">(To claim your won prize and initiate the delivery process immediately, please click on the Customer Support button below.)</span>
                        </p>
                        <!-- WhatsApp link uses the provided number and includes the pre-filled message -->
                        <a href="${whatsappLink}?text=${prefilledMessage}" 
                           target="_blank" 
                           class="inline-flex items-center justify-center bg-green-500 hover:bg-green-600 text-white font-black py-3 px-6 rounded-xl shadow-lg transition duration-200 whatsapp-button"> 
                            <span class="text-3xl mr-2">üìû</span> Customer Support (WhatsApp: ${displayCountryCode} ${displayNumber})
                        </a>
                    </div>
                `;
                
                // Display winner message
                resultMessage.classList.remove('hidden');
                
                // --- PERMANENT BUTTON DISABLE LOGIC ---
                drawButton.disabled = true;
                drawButton.textContent = "üé≤ Khel Khatam, Agle Draw Ka Intezaar Karein! üêí";
                drawButton.classList.remove('bg-purple-700', 'hover:bg-purple-800', 'press-button');
                drawButton.classList.add('bg-red-500', 'cursor-not-allowed', 'shadow-none');
                
                // Final Monkey Visual (Excited)
                monkeyVisual.innerHTML = 'ü•≥'; 
                monkeyVisual.classList.remove('scale-0');
                monkeyVisual.classList.add('scale-100');

            }, 3000); // 3 seconds = 3000 milliseconds
        }

        // Button click event listener
        window.onload = function() {
            drawButton.addEventListener('click', drawWinner);
        };
    </script>

</body>
</html>